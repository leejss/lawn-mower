{
  "name": "naver-news-scraper",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run server.ts",
    "start": "bun run server.ts",
    "scrape:single": "bun run src/index.ts --url https://n.news.naver.com/mnews/article/015/0005249661",
    "scrape:mainnews": "bun run src/index.ts --mainnews --page 1 --limit 10 --concurrency 3"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.48.0",
    "node-cron": "^3.0.3",
    "playwright": "^1.54.2"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "@types/node-cron": "^3.0.11"
  }
}
