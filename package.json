{
  "name": "naver-news-scraper",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run src/server.ts",
    "start": "bun run src/server.ts",
    "cli": "bun run src/cli.ts",
    "lint": "biome lint .",
    "check": "biome check .",
    "format": "biome format --write .",
    "scrape:single": "bun run src/cli.ts --url https://n.news.naver.com/mnews/article/015/0005249661",
    "scrape:mainnews": "bun run src/cli.ts --mainnews --page 1 --limit 10 --concurrency 3"
  },
  "dependencies": {
    "@ai-sdk/openai": "^3.0.29",
    "@supabase/supabase-js": "^2.48.0",
    "ai": "^6.0.86",
    "node-cron": "^3.0.3",
    "playwright": "^1.54.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.15",
    "@types/bun": "^1.3.9",
    "@types/node-cron": "^3.0.11"
  }
}
